@switch (contentType)
{
    case "Text":

        <div @onclick="InternalOnClicked"
             @onmouseenter="InternalOnMouseEnter"
             @onmouseleave="InternalOnMouseLeave"
             @onmouseup="InternalOnMouseUp"
             @onmousedown="InternalOnMouseDown"
             style="background-color:@BackgroundColor;
                       border:none;
                       display:inline-block;width:auto; vertical-align: top;
                       cursor:pointer;">
            @Text
        </div>

        break;

    case "Image":

        <div @onclick="InternalOnClicked"
             @onmouseenter="InternalOnMouseEnter"
             @onmouseleave="InternalOnMouseLeave"
             @onmouseup="InternalOnMouseUp"
             @onmousedown="InternalOnMouseDown"
             style="background-color:@BackgroundColor;
                       border:none;
                       display:inline-block;width:auto; vertical-align: top;
                    cursor:pointer;">

            <img src="@ContentPath" />
        </div>

        break;


    case "Video":

        <div @onclick="InternalOnClicked"
             @onmouseenter="InternalOnMouseEnter"
             @onmouseleave="InternalOnMouseLeave"
             @onmouseup="InternalOnMouseUp"
             @onmousedown="InternalOnMouseDown"
             style="background-color:@BackgroundColor;
                    border:none;
                    display:inline-block; width:32px; height:32px;
                    position:relative;
                    cursor:pointer;">

            <video disablePictureInPicture src="@ContentPath"
                   style="max-width: 100%; max-height: 100%;
                           position: absolute;
                           top: 50%; left: 50%; vertical-align: top;
                           transform: translate(-50%, -50%);" />
        </div>

        break;
}
